generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


// * Schemas
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int

  content   String
  createdAt DateTime @default(now())

  //? Related to: 
  PostReactions PostReactions[]
  Comentary     Comentary[]
}

model PostReactions {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  postId    String        @db.ObjectId

  reaction  ReactionsEnum
  createdAt DateTime      @default(now())

  //? Relations
  post Post @relation(fields: [postId], references: [id])
}

model Comentary {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  content   String
  createdAt DateTime @default(now())
  postId    String   @db.ObjectId

  //? Relations
  post               Post                 @relation(fields: [postId], references: [id])
  ComentaryReactions ComentaryReactions[]
  Replies            Replies[]
}

model ComentaryReactions {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  userId       Int
  reaction     ReactionsEnum
  createdAt    DateTime      @default(now())
  commentaryId String        @db.ObjectId

  //? Relations
  commentary Comentary @relation(fields: [commentaryId], references: [id])
}

model Replies {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       Int
  content      String
  createdAt    DateTime @default(now())
  commentaryId String   @db.ObjectId

  //? Relations
  comentary Comentary @relation(fields: [commentaryId], references: [id])
}

enum ReactionsEnum {
  LIKE
  LOVE
  WOW
  SAD
  ANGRY
  BASED
}
